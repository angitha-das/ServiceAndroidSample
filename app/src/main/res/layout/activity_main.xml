<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.angithadas.serviceandroidsample.MainActivity">

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:gravity="center"
        android:padding="16dp"
        android:layout_margin="16dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        android:text="Start Services"
        android:textAllCaps="false"
        android:onClick="startService"
        android:layout_below="@+id/text"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop Services"
        android:id="@+id/button"
        android:textAllCaps="false"
        android:onClick="stopService"
        android:layout_below="@+id/button2"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btnBind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bind to Service"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/button"
        android:onClick="bindService"/>


    <Button
        android:id="@+id/btnUnbind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Unbind from Service"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btnBind"
        android:onClick="unBindService"/>

    <EditText
        android:id="@+id/number"
        android:hint="Enter Number"
        android:layout_below="@+id/btnUnbind"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/result"
        android:hint="Result"
        android:textSize="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/number"/>
    <Button
        android:id="@+id/factorial"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/result"
        android:text="find factorial"
        android:onClick="factorial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</RelativeLayout>
